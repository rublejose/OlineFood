<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@drawable/roundfield"
    tools:context="com.ruble.olinefood.activity.AddToCartActivity">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/quantityEditText"
        android:layout_alignBottom="@+id/quantityEditText"
        android:layout_toStartOf="@+id/quantityEditText"
        android:text="Item Quantity (in Numbers):  " />

    <EditText
        android:id="@+id/quantityEditText"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/cartItemNameTextView"
        android:layout_marginEnd="61dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="phone" />

    <Button
        android:id="@+id/cartBackButton"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/quantityEditText"
        android:layout_marginTop="23dp"
        android:background="@color/colorPrimary"
        android:text="Back"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/addToCartButton"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/cartBackButton"
        android:layout_alignBottom="@+id/cartBackButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="45dp"
        android:background="@color/colorPrimary"
        android:text="Add To cart"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/cartItemNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textSize="18sp" />
</RelativeLayout>


